RewriteEngine On
RewriteBase /e-commerce/

# Rimuovi il prefisso '/ecommerce/' dal percorso prima di reindirizzare
RewriteCond %{REQUEST_URI} !^/ecommerce/
RewriteRule ^(.+)$ /ecommerce/$1 [L,NC]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.+)$ index.php [QSA,L]